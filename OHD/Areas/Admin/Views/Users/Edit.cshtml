@model OHD.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Complains /</span> Facilites</h4>
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="Edit" enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="ProfileImage" />


                            <div class="mb-3">
                                <label class="form-label" for="basic-default-fullname">First Name</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="basic-default-fullname" placeholder="John Doe" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-default-fullname">Last Name</label>
                                <input asp-for="LastNme" type="text" class="form-control" id="basic-default-fullname" placeholder="John Doe" />
                                <span asp-validation-for="LastNme" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-default-fullname">Country</label>
                                <input asp-for="Country" type="text" class="form-control" id="basic-default-fullname" placeholder="John Doe" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-default-fullname">Email</label>
                                <input asp-for="Email" type="email" class="form-control" id="basic-default-fullname" placeholder="John Doe" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-default-fullname">Password</label>
                                <input asp-for="PasswordHash" type="password" class="form-control" id="basic-default-fullname" placeholder="John Doe" />
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Profile Image</label>
                                <input asp-for="iImage" type="file" class="form-control" />
                            </div>

                            <button type="submit" class="btn btn-primary">Send</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3">

                            <div class="mb-3 mt-3">
                                <div class="w-100 h-100 text-center">
                                    @if (Model.ProfileImage != null)
                                    {
                                        <img src="~/@Model.ProfileImage" class="img-fluid" style="height:250px;width:350px">
                                    }
                                    else
                                    {
                                        <h2>No Image</h2>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

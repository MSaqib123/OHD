@model OHD.Data.ViewModels.VMFacility

@{
    ViewData["Title"] = "Create";
}


<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Complains /</span> Facilites</h4>
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="tblFacility.FaciId" class="form-control" hidden />
                            <input asp-for="tblFacility.FaciImage" class="form-control" hidden />

                            <div class="mb-3">
                                <label class="form-label" for="basic-default-fullname">Facility</label>
                                <input asp-for="tblFacility.FaciFacilities" type="text" class="form-control" id="basic-default-fullname" placeholder="John Doe" />
                                <span asp-validation-for="tblFacility.FaciFacilities" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="tblFacility.FaciBrifedescription" class="form-label" for="basic-default-message">Facility Description</label>
                                <textarea asp-for="tblFacility.FaciBrifedescription" class="form-control" placeholder="Hi, Give Brife Description?"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Main_Images</label>
                                <input asp-for="tblFacility.MainBrowsImage" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Multiple_Images</label>
                                <input asp-for="Images" class="form-control" multiple />
                            </div>

                            <button type="submit" class="btn btn-primary">Send</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="mb-3 mt-3">
                                <div class="w-100 h-100 text-center">
                                    <img src="~/@Model.tblFacility.FaciImage" class="img-fluid" style="height:250px;width:350px">
                                </div>
                            </div>

                            <div class="row">
                                @foreach (var item1 in Model.tblFacilityImages_List.ToList())
                                {
                                    <div class="col-3">
                                        <div class="mb-3">
                                            <img src="~/@item1.ImageUrl" class="img-fluid" style="width: 150px;height:120px" />
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>


            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
